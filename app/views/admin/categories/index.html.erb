<section class="admin-categories-index">
<!-- add in css -->

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>
  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default categories">
  <!-- add in css -->

    <table class="table table-bordered">
      <% @categories.each do |category| %>
        <tr><strong>Name: <%= category.name %></strong><br>
        Created at: <%= category.created_at %><br></tr>
      <% end %>
    </table>

  </div>

</section>



